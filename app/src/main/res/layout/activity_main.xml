<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.drawer.WearableDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    android:padding="0dp">
           <ImageView
            android:id="@+id/splash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/aneto"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />
        <LinearLayout
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"
            android:orientation="vertical">
        </LinearLayout>
        <TextView
            android:background="@android:color/holo_blue_dark"
            android:fontFamily="@font/spinnaker"
            android:gravity="center"
            android:id="@+id/menu"
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:text='Départ'
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <androidx.wear.widget.BoxInsetLayout
            android:id="@+id/box"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:nestedScrollingEnabled="true"
            android:padding="0dp">

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="0dp"
                    app:boxedEdges="all">

                        <LinearLayout
                            android:id="@+id/top"
                            android:layout_gravity="top"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent">

                                <TextView
                                    android:autoSizeMaxTextSize="100sp"
                                    android:autoSizeMinTextSize="8sp"
                                    android:autoSizeStepGranularity="1sp"
                                    android:autoSizeTextType="uniform"
                                    android:fontFamily="@font/spinnaker"
                                    android:gravity="center"
                                    android:id="@+id/text1"
                                    android:importantForAutofill="auto"
                                    android:layout_height="match_parent"
                                    android:layout_width="match_parent"
                                    android:text='Hello world'
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />
                        </LinearLayout>

                        <FrameLayout
                            android:background="@color/light_grey"
                            android:layout_gravity="center"
                            android:layout_height="1dp"
                            android:layout_width="match_parent"></FrameLayout>

                        <LinearLayout
                            android:id="@+id/bottom"
                            android:layout_gravity="bottom"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:orientation="vertical">

                                <LinearLayout
                                    android:layout_gravity="top"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal">

                                        <TextView
                                            android:fontFamily="@font/spinnaker"
                                            android:gravity="bottom|left"
                                            android:id="@+id/text11"
                                            android:layout_height="match_parent"
                                            android:layout_weight="2"
                                            android:layout_width="0dp"
                                            android:text="course\nground"
                                            android:textColor="@color/light_grey"
                                            android:textSize="20sp" />

                                        <TextView
                                            android:autoSizeMaxTextSize="100sp"
                                            android:autoSizeMinTextSize="10sp"
                                            android:autoSizeStepGranularity="1sp"
                                            android:fontFamily="@font/spinnaker"
                                            android:gravity="bottom|center_horizontal"
                                            android:id="@+id/text12"
                                            android:includeFontPadding="false"
                                            android:lastBaselineToBottomHeight="0dp"
                                            android:layout_gravity="bottom"
                                            android:layout_height="match_parent"
                                            android:layout_marginBottom="-8dp"
                                            android:layout_weight="4"
                                            android:layout_width="0dp"
                                            android:text='5.52'
                                            android:textColor="@color/white"
                                            android:textSize="30sp" />

                                        <LinearLayout
                                            android:layout_gravity="bottom"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:layout_width="0dp"
                                            android:orientation="vertical">

                                                <TextView
                                                    android:fontFamily="@font/spinnaker"
                                                    android:id="@+id/text14"
                                                    android:layout_height="0dp"
                                                    android:layout_weight="0.5"
                                                    android:layout_width="match_parent"
                                                    android:maxLines="1"
                                                    android:text='∧'
                                                    android:textColor="@color/green"

                                                    android:textStyle="bold" />

                                                <TextView
                                                    android:autoSizeMaxTextSize="100sp"
                                                    android:autoSizeMinTextSize="1sp"
                                                    android:autoSizeStepGranularity="1sp"
                                                    android:autoSizeTextType="uniform"
                                                    android:fontFamily="@font/spinnaker"
                                                    android:gravity="bottom|left"
                                                    android:id="@+id/text13"
                                                    android:includeFontPadding="false"
                                                    android:lastBaselineToBottomHeight="0dp"
                                                    android:layout_height="0dp"
                                                    android:layout_marginBottom="0dp"
                                                    android:layout_marginTop="0dp"
                                                    android:layout_weight="0.5"
                                                    android:layout_width="match_parent"
                                                    android:maxLines="1"

                                                    android:text='°'
                                                    android:textColor="@color/light_grey" />
                                        </LinearLayout>
                                </LinearLayout>

                                <LinearLayout

                                    android:layout_gravity="bottom"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal">

                                        <TextView
                                            android:autoSizeMaxTextSize="100sp"
                                            android:autoSizeMinTextSize="4sp"
                                            android:autoSizeStepGranularity="1sp"
                                            android:fontFamily="@font/spinnaker"
                                            android:gravity="bottom|left"
                                            android:id="@+id/text21"
                                            android:includeFontPadding="false"
                                            android:lastBaselineToBottomHeight="0dp"

                                            android:layout_height="match_parent"
                                            android:layout_marginBottom="0dp"
                                            android:layout_weight="2"
                                            android:layout_width="0dp"
                                            android:text="course\nground"
                                            android:textColor="@color/light_grey"
                                            android:textSize="1sp" />

                                        <TextView
                                            android:autoSizeMaxTextSize="100sp"
                                            android:autoSizeMinTextSize="10sp"
                                            android:autoSizeStepGranularity="1sp"
                                            android:fontFamily="@font/spinnaker"
                                            android:gravity="bottom|center_horizontal"
                                            android:id="@+id/text22"
                                            android:includeFontPadding="false"
                                            android:lastBaselineToBottomHeight="0dp"
                                            android:layout_gravity="bottom"
                                            android:layout_height="match_parent"
                                            android:layout_marginBottom="-8dp"
                                            android:layout_weight="4"
                                            android:layout_width="0dp"
                                            android:maxLines="1"
                                            android:text='5.52'
                                            android:textColor="@color/white"
                                            android:textSize="30sp" />

                                        <LinearLayout
                                            android:layout_gravity="bottom"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:layout_width="0dp"
                                            android:orientation="vertical">

                                                <TextView
                                                    android:autoSizeMaxTextSize="100sp"
                                                    android:autoSizeMinTextSize="8sp"
                                                    android:autoSizeStepGranularity="1sp"
                                                    android:autoSizeTextType="uniform"
                                                    android:fontFamily="@font/spinnaker"
                                                    android:id="@+id/text24"
                                                    android:layout_height="0dp"
                                                    android:layout_weight="0.5"
                                                    android:layout_width="match_parent"
                                                    android:maxLines="1"
                                                    android:text='∧'
                                                    android:textColor="@color/green"

                                                    android:textStyle="bold" />

                                                <TextView
                                                    android:autoSizeMaxTextSize="100sp"
                                                    android:autoSizeMinTextSize="1sp"
                                                    android:autoSizeStepGranularity="1sp"
                                                    android:autoSizeTextType="uniform"
                                                    android:fontFamily="@font/spinnaker"
                                                    android:gravity="bottom|left"
                                                    android:id="@+id/text23"
                                                    android:includeFontPadding="false"
                                                    android:lastBaselineToBottomHeight="0dp"
                                                    android:layout_height="0dp"
                                                    android:layout_marginBottom="0dp"
                                                    android:layout_marginTop="0dp"
                                                    android:layout_weight="0.5"
                                                    android:layout_width="match_parent"
                                                    android:maxLines="1"

                                                    android:text='°'

                                                    android:textColor="@color/light_grey" />
                                        </LinearLayout>
                                </LinearLayout>
                        </LinearLayout>
                </LinearLayout>
        </androidx.wear.widget.BoxInsetLayout>

        <android.support.wearable.view.DotsPageIndicator
            android:id="@+id/indicator"
            android:layout_gravity="bottom|center"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:visibility="visible"
            app:dotColor="@color/white"
            tools:visibility="visible" />
</androidx.wear.widget.drawer.WearableDrawerLayout>